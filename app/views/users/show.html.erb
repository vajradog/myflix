<section class="user container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <article>
        <header>
          <img/>
          <h2><%= @user.full_name %>'s video collections <span data-id="queue_items.count">(<%= @user.queue_items.count %>)</span></h2>
          <button class="btn btn-default">Follow</button>
        </header>
        <table class="table">
          <thead>
            <tr>
              <th>Video Title</th>
              <th>Genre</th>
            </tr>
          </thead>
          <tbody>
            <% @user.queue_items.each do |queue_item| %>
              <tr>
                <td>
                  <%= link_to queue_item.video.title, queue_item.video %>
                </td>
                <td>
                  <%= link_to queue_item.video.category.name, queue_item.video.category %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </article>
    </div>
  </div>
</section>
<section class="user_reviews container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <header>
        <h3><%= @user.full_name %>'s Reviews (<%= @user.reviews.count %>)</h3>
      </header>
      <ul>
        <% @user.reviews.each do |review| %>
          <article class="review">
            <li class="row">
              <div class="col-sm-2">
                <p>
                  <%= link_to review.video.title, review.video %>
                </p>
                <col>Rating: <%= review.rating %></col>
              </div>
              <div class="col-sm-8">
                <p><%= review.content %></p>
              </div>
            </li>
          </article>
        <% end %>
      </ul>
    </div>
  </div>
</section>
